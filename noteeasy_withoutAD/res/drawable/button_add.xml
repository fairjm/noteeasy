<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="5dp" />

            <gradient android:endColor="#e0CD3333" android:startColor="#e0CD3333" />

            <stroke android:width="1dp" android:color="#b0ffffff" />
            
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp"
                />
        </shape>
        
        </item>
        
    <item android:state_enabled="true">        
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="5dp" />

            <gradient android:endColor="#b000CD00" android:startColor="#f000CD00" />

            <stroke android:width="1dp" android:color="#b0ffffff" />
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp"
                />
        </shape>
   
        </item>
        
        
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="5dp" />

            <gradient android:endColor="#bbffffff" android:startColor="#60ffffff" />

            <stroke android:width="1dp" android:color="#b0ffffff" />
            
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp"
                />
        </shape>
        
        </item>

</selector>